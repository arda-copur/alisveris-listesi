@using Entities;
@model Product

@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form asp-controller="Product" asp-action="AddProduct" method="post">
    <div class="form-group">
        <label for="ÜrünAdı">Ürün Adı</label>
        <input type="text" class="form-control" id="ÜrünAdı" name="ÜrünAdı"  required>
    </div>
    <div class="form-group">
        <label for="Miktar">Miktar</label>
        <input type="number" class="form-control" id="Miktar" name="Miktar"  required>
    </div>
    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        <select class="form-control" id="CategoryId" name="CategoryId" required>
            @foreach (var category in ViewBag.cv)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

